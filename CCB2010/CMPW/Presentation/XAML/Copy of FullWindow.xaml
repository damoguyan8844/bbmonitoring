<Window x:Class="JOYFULL.CMPW.Presentation.FullWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="1000" Width="1280" WindowState="Maximized"
    Title="建设银行集中监控预警系统" Icon="../Images/ccb_logo.png" 
    Closed="Window_Closed">
    <Grid Height="1000" Width="1280">
        <Image Name="img" Height="1000" Width="1280"></Image>
        <TextBlock FontSize="80" Foreground="Red" Opacity="0.8" Name="ex" Margin="0,278,0,0" Height="100" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontFamily="黑体">请处理异常</TextBlock>
        <TextBlock FontSize="30" Foreground="Red" Opacity="0.8" Name="info" Margin="0,0,0,328" Height="34"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="隶书">按Esc键返回操作界面</TextBlock>
        <TextBlock FontSize="35" Foreground="Red" Opacity="1.0" Name="txtDesc"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Height="90"></TextBlock>
    </Grid>
</Window>
